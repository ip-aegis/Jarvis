# Jarvis Backend Environment Configuration
# Copy this file to .env and update values as needed

# Environment: development, staging, production
ENVIRONMENT=development

# Database
DATABASE_URL=postgresql://jarvis:jarvis_dev_password@localhost:5432/jarvis

# Ollama LLM (legacy)
OLLAMA_URL=http://10.10.20.62:11434
OLLAMA_MODEL=llama3.1:8b

# OpenAI LLM (primary)
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4o-mini
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# SearXNG
SEARXNG_URL=http://localhost:8888

# SSH Keys storage
SSH_KEYS_PATH=/app/ssh_keys

# Authentication (CHANGE IN PRODUCTION!)
JWT_SECRET_KEY=change-me-in-production-use-a-strong-random-key
JWT_EXPIRE_HOURS=24
ADMIN_USERNAME=admin
# Generate password hash with:
# python -c "import bcrypt; print(bcrypt.hashpw(b'your-password', bcrypt.gensalt()).decode())"
ADMIN_PASSWORD_HASH=$2b$12$d8TIuKkqtAHu7xvg1bhxP.Ry7vZU7bLZOb9NiYZ7IW8iznHajHZGm

# Logging
LOG_LEVEL=INFO
