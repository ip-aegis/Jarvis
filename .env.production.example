# Jarvis Production Environment Configuration
# Copy this file to .env and update ALL values before deploying

# Environment - MUST be set to production
ENVIRONMENT=production

# Database - use strong password
DB_USER=jarvis
DB_PASSWORD=<GENERATE_STRONG_PASSWORD>
DATABASE_URL=postgresql://${DB_USER}:${DB_PASSWORD}@db:5432/jarvis

# Ollama LLM
OLLAMA_URL=http://10.10.20.62:11434
OLLAMA_MODEL=llama3.1:8b

# SearXNG
SEARXNG_URL=http://searxng:8080

# SSH Keys storage
SSH_KEYS_PATH=/app/ssh_keys

# Authentication - REQUIRED: Must change these values
# Generate JWT secret: openssl rand -hex 32
JWT_SECRET_KEY=<GENERATE_64_CHAR_SECRET>
JWT_EXPIRE_HOURS=24
ADMIN_USERNAME=admin
# Generate password hash:
# python -c "import bcrypt; print(bcrypt.hashpw(b'your-password', bcrypt.gensalt()).decode())"
ADMIN_PASSWORD_HASH=<GENERATE_BCRYPT_HASH>

# Logging
LOG_LEVEL=INFO

# GitHub repository for container registry
GITHUB_REPOSITORY=your-org/jarvis

# Deployment (used by CI/CD)
DEPLOY_HOST=10.10.20.235
DEPLOY_USER=deploy
